{% extends 'base.twig' %}

{% block content %}

    <h2>All users</h2>
    {% if users %}
        <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.userid|e('html_attr') }}</td>
                <td><a href="/user/{{ user.username|raw }}">{{ user.username|e('html_attr') }}</a></td>
            </tr>
        {% endfor %}
        </table>
    {% else %}
        The users table is empty.
    {% endif %}
{% endblock %}
