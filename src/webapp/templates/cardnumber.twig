{% extends 'base.twig' %}

{% block content %}

    <h2>Change card</h2>

    <form action="" method="POST">
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <div id="flasherror">{{ flash.error|e('html_attr') }}</div>
        <table>
            <th>Current cardnumber</th>
            <td>{{ user.cardNumberToDisplay|e('html_attr') }}</td>
            <tr></tr>
            <th>Change card:</th>
            <td><input type = "text" name="cardnumber"></td>
            <td colspan="2">
                <input type="submit" name="save" value="Save" style="float: right">
            </td>
        </table>
    </form>
{% endblock %}
